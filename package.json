{
    "name": "chromoscope",
    "version": "0.1.1",
    "license": "MIT",
    "homepage": "https://chromoscope.bio",
    "repository": {
        "type": "git",
        "url": "https://github.com/hms-dbmi/chromoscope"
    },
    "bin": {
        "urlsafe-codec-cli": "./src/urlsafe-codec-cli.js"
    },
    "scripts": {
        "start": "vite",
        "start-docs": "yarn --cwd docs start",
        "build": "vite build",
        "build-docs": "yarn --cwd docs install; yarn --cwd docs build",
        "serve": "vite preview",
        "predeploy": "yarn build; yarn build-docs; rm -rf build; cp -R docs/build build; echo \"chromoscope.bio\" >> build/CNAME; touch build/.nojekyll; cp -R dist build/app",
        "format": "eslint src/ --fix && prettier --write src/",
        "deploy": "gh-pages -d build -t --git git",
        "thumbnail": "node src/thumbnails.js",
        "test": "jest"
    },
    "dependencies": {
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@types/react-router-dom": "^5.2.0",
        "axios": "^1.6.2",
        "buffer": "^6.0.3",
        "gosling.js": "^0.11.0",
        "idb": "^7.0.2",
        "lodash": "^4.17.21",
        "path": "^0.12.7",
        "pixi.js": "^6.0.4",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-router-dom": "^5.2.0",
        "react-tabulator": "^0.19.0",
        "tabulator-tables": "^5.5.2",
        "uuid": "^8.3.2",
        "yargs": "^17.0.1"    
    },
    "devDependencies": {
        "@babel/preset-env": "^7.24.3",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "babel-jest": "^29.7.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.24.0",
        "gh-pages": "^3.2.3",
        "husky": "^4.2.5",
        "jest": "^29.7.0",
        "prettier": "^2.4.1",
        "typescript": "^4.3.2",
        "vite": "^2.9.8"
    },
    "jest": {
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    },
    "resolutions": {
        "slugid": "^3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && git add ."
        }
    }
}
